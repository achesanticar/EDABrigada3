#include <stdio.h>

int main(int argc, char const *argv[])
{
    int dez, arr;
    char abc[26], abc2[26];
    for (int i = 0; i < 26; i++)
    {
        abc[i]='a'+i;
    }
    
    printf("Introduce el desfaze: ");
    scanf("%d", &dez);

    for (int i = 0; i < 26; i++)
    {
        abc2[i]=i+dez;
        if (i+dez>25)
        {
            arr=i+dez-25;
            abc2[i]='a'+arr;
        } 
    }
    for (int i = 0; i < 26; i++)
    {
        printf("%s",abc2);
    }
    return 0;
}
