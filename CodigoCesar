#include <stdio.h>

int main(int argc, char const *argv[])
{
    int dez, arr;
    char txt[100], abc[26], abc2[26];
    
    printf("Introduce el desfaze: ");
    scanf("%d", &dez);

    for (int j = 0; j < 26; j++)
    {
        abc2[j]='a'+j;
    }

    for (int j = 0; j < 26; j++)
    {
        abc2[j]='a'+j+dez;
        if (j+dez>25)
        {
            arr=j+dez-26;
            abc2[j]='a'+arr;
        } 
    }

    printf("Introduce el texto a codificar:");
    scanf("%s", txt);

    for (int i = 0; i < 26; i++)
    {
        if (txt[i]=abc[i])
        {
            txt[i]=abc2[i];
        }
        
    }
    printf("%c",txt[0]);
    return 0;
}
