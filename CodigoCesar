#include <stdio.h>

int main(int argc, char const *argv[])
{
    int dez, arr, Size=0, r, p=0, option;
    char txt[100], abc[26], abc2[26];

    printf("Elige una acci√≤n:\n1-Codificar un mensaje\n2-Decodificar un mensaje\n");
    scanf("%d", &option);
    switch (option)
    {
    case 1:
        printf("Introduce el desfaze: ");
        scanf("%d", &dez);

        for (int j = 0; j < 26; j++)
        {
            abc[j]='a'+j;
        }

        for (int j = 0; j < 26; j++)
        {
            abc2[j]='a'+j+dez;
            if (j+dez>25)
            {
                arr=j+dez-26;
                abc2[j]='a'+arr;
            } 
        }

        printf("Introduce el texto a codificar:");
        scanf("%s", txt);

        while (txt[Size] != '\0')
        {
            Size++;
        }
        

        for (int i = 0; i < Size; i++)
        {
            r=0;
            while (txt[i] != abc[r])
            {
                r++;
            }
            txt[i]=abc2[r];
        }
        
        for (int i = 0; i < Size; i++)
        {
            printf("%c",  txt[i]);
        }
        printf("\n");
    break;
    case 2:
        printf("aunno");
    break;
    default:
        printf("opcion invalida");
        break;
    }
    
    return 0;
}
